datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Supabase connection string
}

generator client {
  provider = "prisma-client-js"
}

model Currency {
  id        Int      @id @default(autoincrement())
  USD       String?
  EUR       String?
  GBP       String?
  TRY       String?
  IRR       String?
  createdAt DateTime @default(now())
}
